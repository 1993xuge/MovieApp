<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content">


        <com.steven.movieapp.widget.RoundCornerImageView
            android:id="@+id/iv_trailers"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y_half"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_movie_default"
            app:radius="@dimen/x_half" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_default_play" />

    </RelativeLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxWidth="100dp"
        android:maxLines="2"
        android:paddingTop="@dimen/y_half"
        android:paddingBottom="@dimen/y_half"
        android:text="中文预告片中文预告片"
        android:textColor="@color/color_black" />

</LinearLayout>